<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <!-- business datasources-->
  
     <bean id="businessDataSource" class="${jdbc.class}"
          p:alias="businessDataSource_m_0"
          p:driver="${jdbc.driver}"
          p:driverUrl="${business.master.jdbc.driverUrl}"
          p:user="${business.master.jdbc.user}"
          p:password="${business.master.jdbc.password}"
          p:maximumConnectionCount="${business.master.jdbc.maximumConnectionCount}"
          p:simultaneousBuildThrottle="${business.master.jdbc.simultaneousBuildThrottle}"
          p:testBeforeUse="${jdbc.testBeforeUse}" 
          p:houseKeepingTestSql="${jdbc.houseKeepingTestSql}" /> 
  
           
          
        
        
    
</beans>